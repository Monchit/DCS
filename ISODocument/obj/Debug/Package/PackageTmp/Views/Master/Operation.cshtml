@{
    ViewBag.Title = "Operation Management";
}
<link href="~/Scripts/jtable/themes/metro/darkorange/jtable.min.css" rel="stylesheet" />
<style type="text/css">
    /*fix jTable*/
    span.jtable-goto-page select, span.jtable-page-size-change select {
        height: 25px;
        width: 60px;
        padding: 2px 2px;
        margin-bottom:auto;
    }
    div.jtable-main-container table.jtable thead th {
        text-align: center;
    }
    div.jtable-main-container > table.jtable > tbody > tr.jtable-data-row > td {
        text-align: center;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jTableOperation').jtable({
            title: 'Operation Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'operation_id', //Set default sorting
            actions: {
                listAction: '@Url.Action("OperationList","Master")',
                deleteAction: '@Url.Action("DeleteOperation","Master")',
                updateAction: '@Url.Action("UpdateOperation","Master")',
                createAction: '@Url.Action("CreateOperation","Master")'
            },
            fields: {
                operation_id: { title: 'ID', key: true, create: true, edit: false, width: '35%' },
                operation_name: { title: 'Operation Name', create: true, edit: true, width: '60%' }
            }
        });
        //Load student list from server
        $('#jTableOperation').jtable('load');

    });
</script>

<div id="jTableOperation" style="width:600px;"></div>
