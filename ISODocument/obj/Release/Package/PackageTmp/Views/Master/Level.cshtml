@{
    ViewBag.Title = "Level Management";
}
<link href="~/Scripts/jtable/themes/metro/darkorange/jtable.min.css" rel="stylesheet" />
<style type="text/css">
    /*fix jTable*/
    span.jtable-goto-page select, span.jtable-page-size-change select {
        height: 25px;
        width: 60px;
        padding: 2px 2px;
        margin-bottom:auto;
    }
    div.jtable-main-container table.jtable thead th {
        text-align: center;
    }
    div.jtable-main-container > table.jtable > tbody > tr.jtable-data-row > td {
        text-align: center;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jTableLevel').jtable({
            title: 'Level Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'lv_id', //Set default sorting
            actions: {
                listAction  : '@Url.Action("LevelList","Master")',
                deleteAction: '@Url.Action("DeleteLevel","Master")',
                updateAction: '@Url.Action("UpdateLevel","Master")',
                createAction: '@Url.Action("CreateLevel","Master")'
            },
            fields: {
                lv_id: { title: 'ID', key: true, create: true, edit: false, width: '20%' },
                lv_name: { title: 'Level Name', create: true, edit: true, width: '40%' },
                position_min: { title: 'Position Min', create: true, edit: true, width: '20%' },
                position_max: { title: 'Position Max', create: true, edit: true, width: '20%' }
            }
        });
        //Load student list from server
        $('#jTableLevel').jtable('load');

    });
</script>

<div id="jTableLevel"></div>
