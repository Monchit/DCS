@{
    ViewBag.Title = "Paper Management";
}
<link href="~/Scripts/jtable/themes/metro/darkorange/jtable.min.css" rel="stylesheet" />
<style type="text/css">
    /*fix jTable*/
    span.jtable-goto-page select, span.jtable-page-size-change select {
        height: 25px;
        width: 60px;
        padding: 2px 2px;
        margin-bottom:auto;
    }
    div.jtable-main-container table.jtable thead th {
        text-align: center;
    }
    div.jtable-main-container > table.jtable > tbody > tr.jtable-data-row > td {
        text-align: center;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#jTablePaper').jtable({
            title: 'Paper Master',
            paging: true, //Enable paging
            pageSize: 10, //Set page size (default: 10)
            sorting: true, //Enable sorting
            selecting: true, //Enable selecting
            defaultSorting: 'paper_id', //Set default sorting
            actions: {
                listAction: '@Url.Action("PaperList","Master")',
                @*deleteAction: '@Url.Action("DeletePaper","Master")',*@
                updateAction: '@Url.Action("UpdatePaper","Master")',
                createAction: '@Url.Action("CreatePaper","Master")'
            },
            fields: {
                paper_id: { title: 'Paper ID', key: true, create: false, edit: false, width: '35%' },
                paper_name: { title: 'Paper Name', create: true, edit: true, width: '60%' }
            }
        });
        //Load student list from server
        $('#jTablePaper').jtable('load');

    });
</script>

<div id="jTablePaper" style="width:600px;"></div>
