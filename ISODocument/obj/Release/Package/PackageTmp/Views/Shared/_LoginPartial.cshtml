{
    <text>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#formLogin").submit(function () {
                    if (!$.validate({ form: 'formLogin' })) {
                        return false;
                    }
                });
            });
        </script>
        <form id="formLogin" name="formLogin" class="navbar-form pull-right" action="@Url.Action("Login", "Home")" method="post">
